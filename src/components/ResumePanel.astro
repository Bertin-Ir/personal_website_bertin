---
import { education, experience, languages, aboutMe, FULL_RESUME_URL } from '../data/resume';
import { skills } from '../data/skills';

const sections = [
  { id: 'experience', label: 'Experience' },
  { id: 'education', label: 'Education' },
  { id: 'skills', label: 'Skills' },
  { id: 'languages', label: 'Languages' },
  { id: 'about', label: 'About Me' },
];

const skillIcons: Record<string, string> = {
  Python: 'ğŸ',
  C: 'â—‰',
  'C++': 'â—‰â—‰',
  MATLAB: 'ğŸ”¬',
  HTML: 'ğŸŒ',
  CSS: 'ğŸ¨',
  Stata: 'ğŸ“Š',
  'Git/GitHub': 'ğŸ“¦',
  'Google Colab': 'â˜ï¸',
  Arduino: 'âš¡',
  Excel: 'ğŸ“ˆ',
  LaTeX: 'ğŸ“',
  Pandas: 'ğŸ¼',
  NumPy: 'ğŸ”¢',
  Matplotlib: 'ğŸ“‰',
  'Scikit-Learn': 'ğŸ¤–',
  Seaborn: 'ğŸ',
  PyTorch: 'ğŸ”¥',
};
---

<section class="px-4 sm:px-6 py-12 md:py-16">
  <div class="max-w-5xl mx-auto flex flex-col md:flex-row gap-8 w-full min-w-0">
    <aside class="md:w-48 flex-shrink-0 flex flex-col">
      <nav class="flex md:flex-col gap-2 overflow-x-auto md:overflow-visible pb-2 md:pb-0" aria-label="Resume sections">
        {sections.map((s) => (
          <button
            type="button"
            class="resume-tab px-4 py-3 rounded-lg text-left font-medium text-sm whitespace-nowrap transition-all duration-200 hover:bg-[var(--accent-muted)] hover:text-[var(--accent)]"
            data-section={s.id}
          >
            {s.label}
          </button>
        ))}
      </nav>
      <a
        href={FULL_RESUME_URL}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-4 md:mt-6 sticky top-24 self-start inline-flex items-center gap-2 px-4 py-2.5 text-sm font-medium text-[var(--accent)] border border-[var(--accent)]/40 rounded-lg hover:bg-[var(--accent-muted)] transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)]"
      >
        <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Full Resume
      </a>
    </aside>

    <div class="flex-1 min-w-0 space-y-10">
      <div id="experience" class="resume-content hidden" data-panel>
        <h2 class="text-xl font-semibold text-[var(--ink)] mb-6 pb-2 border-b border-[var(--ink)]/10">Experience</h2>
        <div class="space-y-8">
          {experience.map((exp) => (
            <div class="resume-exp-block">
              <div class="flex flex-wrap justify-between items-start gap-2 mb-2">
                <div>
                  <h3 class="text-base font-bold text-[var(--ink)]">{exp.role}</h3>
                  <p class="text-sm font-medium text-[var(--accent)]">{exp.company}</p>
                </div>
                <div class="text-right shrink-0">
                  <p class="text-xs text-[var(--ink)]/50">{exp.location}</p>
                  <p class="text-xs text-[var(--ink)]/60">{exp.period}</p>
                </div>
              </div>
              <p class="text-sm text-[var(--ink)]/85 leading-relaxed">{exp.description}</p>
            </div>
          ))}
        </div>
      </div>

      <div id="education" class="resume-content hidden" data-panel>
        <h2 class="text-xl font-semibold text-[var(--ink)] mb-6 pb-2 border-b border-[var(--ink)]/10">Education</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {education.map((edu) => (
            <div class="p-4 rounded-xl border border-[var(--ink)]/10 bg-[var(--surface)] hover:border-[var(--accent)]/20 transition-colors">
              <h3 class="text-sm font-bold text-[var(--ink)] mb-1">{edu.institution}</h3>
              <p class="text-xs text-[var(--ink)]/50 mb-2">{edu.location}{edu.year ? `, ${edu.year}` : ''}</p>
              {edu.degree && (
                <p class="text-sm font-medium text-[var(--accent)] mb-1">{edu.degree}</p>
              )}
              {edu.minor && (
                <p class="text-xs text-[var(--ink)]/80 mb-1">{edu.minor}</p>
              )}
              {edu.expectedGraduation && (
                <p class="text-xs text-[var(--ink)]/60 mb-0.5">Expected Graduation: {edu.expectedGraduation}</p>
              )}
              {edu.gpa != null && (
                <p class="text-xs text-[var(--ink)]/60">GPA: {edu.gpa}</p>
              )}
              {edu.courses && (
                <p class="text-xs text-[var(--ink)]/80 mt-2">Courses: {edu.courses}</p>
              )}
              {edu.courseList && edu.courseList.length > 0 && (
                <div class="mt-2">
                  <p class="text-xs font-medium text-[var(--ink)]/70 mb-1">Courses:</p>
                  <ul class="list-disc list-inside text-xs text-[var(--ink)]/80 space-y-0.5">
                    {edu.courseList.map((c) => (
                      <li>{c}</li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <div id="skills" class="resume-content hidden" data-panel>
        <h2 class="text-xl font-semibold text-[var(--ink)] mb-4 pb-2 border-b border-[var(--ink)]/10">Skills</h2>
        <div class="grid grid-cols-4 sm:grid-cols-5 md:grid-cols-6 gap-4">
          {skills.map((skill) => (
            <div class="skill-pill-wrap group relative flex flex-col items-center">
              <span
                class="skill-pill inline-flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 rounded-full border border-[var(--ink)]/15 bg-[var(--surface)] hover:border-[var(--accent)]/40 hover:bg-[var(--accent-muted)] transition-all cursor-default text-2xl sm:text-3xl"
                aria-label={skill.name}
              >
                {skillIcons[skill.name] || 'â€¢'}
              </span>
              <span class="skill-tooltip absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 text-xs font-medium text-[var(--ink)] bg-[var(--surface)] border border-[var(--ink)]/15 rounded shadow-sm opacity-0 pointer-events-none group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                {skill.name}
              </span>
            </div>
          ))}
        </div>
      </div>

      <div id="languages" class="resume-content hidden" data-panel>
        <h2 class="text-xl font-semibold text-[var(--ink)] mb-6 pb-2 border-b border-[var(--ink)]/10">Languages</h2>
        <div class="flex flex-wrap gap-4">
          {languages.map((lang) => (
            <span class="px-4 py-2 rounded-lg border border-[var(--ink)]/10 bg-[var(--surface)] text-[var(--ink)] font-medium">
              {lang.name}
            </span>
          ))}
        </div>
      </div>

      <div id="about" class="resume-content hidden" data-panel>
        <h2 class="text-xl font-semibold text-[var(--ink)] mb-6 pb-2 border-b border-[var(--ink)]/10">About Me</h2>
        <div class="p-6 rounded-xl border border-[var(--ink)]/10 bg-[var(--accent-muted)]/20">
          <p class="text-[var(--ink)]/90 leading-relaxed mb-6">{aboutMe.text}</p>
          <div class="flex flex-wrap items-center gap-4">
            <a
              href="/contact/"
              class="cta-build-with-me inline-flex items-center gap-2 px-5 py-2.5 border border-[var(--accent)]/50 text-[var(--accent)] font-medium rounded-lg bg-[var(--accent)]/10 hover:bg-[var(--accent)]/20 transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)]"
            >
              Hire me
            </a>
            <div class="flex items-center gap-3" aria-label="GitHub, Email, LinkedIn">
              <a href="https://github.com/Bertin-Ir" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg text-[var(--ink)]/80 hover:text-[var(--accent)] hover:bg-[var(--accent-muted)]/30 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)]" aria-label="GitHub">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/></svg>
              </a>
              <a href="mailto:bi2067@nyu.edu" class="p-2 rounded-lg text-[var(--ink)]/80 hover:text-[var(--accent)] hover:bg-[var(--accent-muted)]/30 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)]" aria-label="Email">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </a>
              <a href="https://www.linkedin.com/in/bertin-iradukunda-b14606250/" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg text-[var(--ink)]/80 hover:text-[var(--accent)] hover:bg-[var(--accent-muted)]/30 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)]" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    var tabs = document.querySelectorAll('.resume-tab');
    var panels = document.querySelectorAll('.resume-content');
    if (!tabs.length || !panels.length) return;

    function show(sectionId) {
      panels.forEach(function (p) {
        p.classList.add('hidden');
        if (p.id === sectionId) p.classList.remove('hidden');
      });
      tabs.forEach(function (t) {
        t.classList.remove('bg-[var(--accent-muted)]', 'text-[var(--accent)]');
        if (t.dataset.section === sectionId) t.classList.add('bg-[var(--accent-muted)]', 'text-[var(--accent)]');
      });
    }

    tabs.forEach(function (tab) {
      tab.addEventListener('click', function () {
        show(tab.dataset.section || 'experience');
      });
    });

    show('experience');
  })();
</script>
