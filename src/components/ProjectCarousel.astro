---

<section class="px-4 sm:px-6 py-12 md:py-16" aria-label="Projects">
  <div class="max-w-4xl mx-auto w-full min-w-0 overflow-x-hidden">
    <h1 class="text-2xl md:text-3xl font-bold text-[var(--ink)] mb-8">Projects</h1>

    <div class="relative">
      <div
        id="carousel"
        class="carousel-container flex overflow-x-auto gap-6 pb-4 snap-x scrollbar-hide"
        style="scroll-behavior: smooth;"
        aria-label="Project cards carousel"
      >
        {projects.map((project) => (
          <div class="carousel-slide flex-shrink-0 w-[85vw] sm:w-[320px] md:w-[360px]">
            <div class="project-card-wrapper group/card w-full flex flex-col">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="project-card group block w-full flex-shrink-0 min-h-[220px] p-5 rounded-2xl border border-[var(--ink)]/10 bg-[var(--surface)] hover:border-[var(--accent)]/40 hover:shadow-[0_8px_30px_-8px_rgba(0,191,166,0.25)] transition-all duration-300 text-left focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)] cursor-pointer"
              >
                <h2 class="text-lg font-bold text-[var(--accent)] mb-2 group-hover:text-[var(--accent)]">
                  {project.title}
                </h2>
                <p class="project-desc text-[var(--ink)]/80 text-sm leading-snug line-clamp-3 group-hover:line-clamp-none mb-4 transition-all duration-200">
                  {project.description}
                </p>
                <span class="inline-flex items-center gap-1.5 text-xs font-medium text-[var(--ink)]/60 group-hover:text-[var(--accent)] transition-colors">
