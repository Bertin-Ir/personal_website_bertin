                  </svg>
                  View on GitHub
                </span>
              </a>
              {/* Skill chips below card (in flow so they are visible and not clipped) */}
              <div
                class="project-chips-float pointer-events-none group-hover/card:pointer-events-auto flex flex-wrap gap-2 justify-center gap-y-1.5 min-h-[2.5rem] pt-2 px-1 opacity-0 group-hover/card:opacity-100 group-focus-within/card:opacity-100 transition-opacity duration-300"
                role="group"
                aria-label="Project skills"
              >
                {project.techStack.map((skill, i) => (
                  <a
                    href="/resume/#skills"
                    class="skill-chip inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-[var(--surface)] border border-[var(--accent)]/30 text-[var(--ink)]/90 text-xs font-medium shadow-md hover:border-[var(--accent)] hover:shadow-[0_0_12px_rgba(0,191,166,0.25)] hover:-translate-y-0.5 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)] transition-all duration-200"
                    style={`animation-delay: ${i * 40}ms`}
                    title={`See skills: ${skill}`}
                  >
                    <span aria-hidden="true">{skillIcon(skill)}</span>
                    {skill}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>

      <button
        id="prev-btn"
        type="button"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-1 md:-translate-x-12 w-11 h-11 md:w-10 md:h-10 min-w-[44px] min-h-[44px] md:min-w-0 md:min-h-0 rounded-full bg-[var(--surface)] border border-[var(--ink)]/20 shadow-lg flex items-center justify-center hover:bg-[var(--accent-muted)] hover:border-[var(--accent)]/40 transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)]"
        aria-label="Previous project"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
      </button>
      <button
        id="next-btn"
        type="button"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1 md:translate-x-12 w-11 h-11 md:w-10 md:h-10 min-w-[44px] min-h-[44px] md:min-w-0 md:min-h-0 rounded-full bg-[var(--surface)] border border-[var(--ink)]/20 shadow-lg flex items-center justify-center hover:bg-[var(--accent-muted)] hover:border-[var(--accent)]/40 transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)]"
        aria-label="Next project"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </button>
    </div>

    <div class="flex justify-center gap-2 mt-6 flex-wrap">
      {projects.map((_, i) => (
        <button
          type="button"
          class="carousel-dot min-w-[44px] min-h-[44px] md:min-w-0 md:min-h-0 flex items-center justify-center rounded-full transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2"
          data-index={i}
          aria-label={`Go to project ${i + 1}`}
        >
          <span class="dot-bg w-2 h-2 rounded-full bg-[var(--ink)]/30"></span>
        </button>
      ))}
    </div>
  </div>
</section>

<style>
  .project-card {
    transform: translateY(0);
  }
  .project-card:hover {
    transform: translateY(-4px);
  }

  /* Floating skill chips: subtle drift when visible */
  .skill-chip {
    animation: skill-chip-float 5s ease-in-out infinite;
  }
  .skill-chip:hover,
  .skill-chip:focus-visible {
    animation: none;
  }
  @keyframes skill-chip-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }
  @media (prefers-reduced-motion: reduce) {
    .skill-chip {
      animation: none;
    }
  }

  .carousel-dot[data-active="true"] .dot-bg {
    background-color: var(--accent);
  }
</style>

<script>
  (function () {
    var carousel = document.getElementById('carousel');
    var prevBtn = document.getElementById('prev-btn');
    var nextBtn = document.getElementById('next-btn');
    var dots = document.querySelectorAll('.carousel-dot');
    if (!carousel || !prevBtn || !nextBtn) return;

    var slides = carousel.querySelectorAll('.carousel-slide');
    var count = slides.length;
    var current = 0;

    function getSlideWidth() {
      var first = slides[0];
      if (!first) return 380;
      return first.offsetWidth + 24;
    }

    function scrollTo(i) {
      current = Math.max(0, Math.min(i, count - 1));
      carousel.scrollTo({ left: current * getSlideWidth(), behavior: 'smooth' });
      dots.forEach(function (d, j) {
        d.setAttribute('data-active', j === current ? 'true' : '');
      });
    }

    prevBtn.addEventListener('click', function () {
      scrollTo(current - 1);
    });
    nextBtn.addEventListener('click', function () {
      scrollTo(current + 1);
    });
    dots.forEach(function (dot, i) {
      dot.addEventListener('click', function () {
        scrollTo(i);
      });
    });

    carousel.addEventListener('scroll', function () {
      var w = getSlideWidth();
      var idx = Math.round(carousel.scrollLeft / w);
      if (idx !== current && idx >= 0 && idx < count) {
        current = idx;
        dots.forEach(function (d, j) {
          d.setAttribute('data-active', j === current ? 'true' : '');
        });
      }
    });

    if (dots[0]) dots[0].setAttribute('data-active', 'true');
  })();
</script>
