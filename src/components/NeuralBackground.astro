---
// Abstract neural / node graph: nodes at line endpoints, low opacity; light up on hero hover.
---
<div id="neural-bg-wrapper" class="neural-bg-wrapper absolute inset-0 overflow-hidden pointer-events-none">
  <svg class="neural-bg absolute inset-0 w-full h-full overflow-visible" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid slice" aria-hidden="true">
    <defs>
      <linearGradient id="neural-node-glow" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="var(--accent)" stop-opacity="0.15" />
        <stop offset="100%" stop-color="var(--accent)" stop-opacity="0.05" />
      </linearGradient>
    </defs>
    <g class="text-[var(--accent)]" opacity="0.08">
      <line x1="0" y1="100" x2="30" y2="70" stroke="currentColor" stroke-width="0.4" opacity="0.5" />
      <line x1="10" y1="90" x2="35" y2="65" stroke="currentColor" stroke-width="0.4" opacity="0.4" />
      <line x1="20" y1="80" x2="45" y2="55" stroke="currentColor" stroke-width="0.4" opacity="0.5" />
      <line x1="55" y1="45" x2="80" y2="20" stroke="currentColor" stroke-width="0.4" opacity="0.5" />
      <line x1="65" y1="35" x2="90" y2="10" stroke="currentColor" stroke-width="0.4" opacity="0.4" />
      <line x1="75" y1="25" x2="100" y2="0" stroke="currentColor" stroke-width="0.4" opacity="0.5" />
    </g>
    <g class="neural-nodes" fill="currentColor" stroke="none">
      <circle class="neural-node" cx="0" cy="100" r="1.2" opacity="0.35" />
      <circle class="neural-node" cx="30" cy="70" r="1.2" opacity="0.35" />
      <circle class="neural-node" cx="10" cy="90" r="1" opacity="0.3" />
      <circle class="neural-node" cx="35" cy="65" r="1" opacity="0.3" />
      <circle class="neural-node" cx="20" cy="80" r="1" opacity="0.35" />
      <circle class="neural-node" cx="45" cy="55" r="1" opacity="0.35" />
      <circle class="neural-node" cx="55" cy="45" r="1" opacity="0.35" />
      <circle class="neural-node" cx="80" cy="20" r="1.2" opacity="0.35" />
      <circle class="neural-node" cx="65" cy="35" r="1" opacity="0.3" />
      <circle class="neural-node" cx="90" cy="10" r="1" opacity="0.3" />
      <circle class="neural-node" cx="75" cy="25" r="1" opacity="0.35" />
      <circle class="neural-node" cx="100" cy="0" r="1.2" opacity="0.35" />
    </g>
  </svg>
</div>

<style>
  .neural-bg {
    color: var(--accent);
  }
  .neural-node {
    transition: opacity 0.4s ease, filter 0.4s ease;
  }
  .neural-bg-wrapper.hero-hover .neural-node {
    opacity: 0.7;
    filter: drop-shadow(0 0 2px currentColor);
  }
</style>
<script is:inline>
  (function() {
    var wrapper = document.getElementById('neural-bg-wrapper');
    var section = wrapper?.closest('section');
    if (!section || !wrapper) return;
    section.addEventListener('mouseenter', function() { wrapper.classList.add('hero-hover'); });
    section.addEventListener('mouseleave', function() { wrapper.classList.remove('hero-hover'); });
  })();
</script>
