---
/** Four interactive ML demos: bias–variance, overfitting, precision–recall, decision boundaries.
    Each teaches one concept; uses client:load for hydration. */
import BiasVarianceTradeoff from './visual/BiasVarianceTradeoff';
import OverfittingGeneralization from './visual/OverfittingGeneralization';
import PrecisionRecallTradeoff from './visual/PrecisionRecallTradeoff';
import DecisionBoundary from './visual/DecisionBoundary';
---

<section id="visual" class="px-6 py-20 md:px-12 lg:px-24 border-t border-[var(--ink)]/10">
  <div class="max-w-4xl mx-auto">
    <p class="text-sm font-mono text-[var(--accent)] uppercase tracking-wider mb-2">Interactive</p>
    <h2 class="text-2xl md:text-3xl font-semibold text-[var(--ink)] mb-4">Visual Intuition</h2>
    <p class="text-[var(--ink)]/80 mb-10">One idea per demo; each teaches a core ML concept.</p>

    <div class="grid gap-8 md:grid-cols-2">
      <BiasVarianceTradeoff client:load />
      <OverfittingGeneralization client:load />
      <PrecisionRecallTradeoff client:load />
      <DecisionBoundary client:load />
    </div>
  </div>
</section>
