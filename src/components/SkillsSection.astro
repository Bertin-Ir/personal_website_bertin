---
import type { SkillLayer } from '../types';
/** Capabilities by layer: problem formulation, modeling, systems, communication.
    No logo walls — focus on what you can do, not tools. */
const layers: SkillLayer[] = [
  {
    name: 'Problem formulation & evaluation',
    items: [
      'Decision-focused ML (loss, constraints, regret)',
      'Metric design and proxy alignment',
      'A/B and counterfactual evaluation',
      'Bias–variance, overfitting, calibration',
    ],
  },
  {
    name: 'Modeling & implementation',
    items: [
      'Classical ML (linear models, trees, ensembles)',
      'Deep learning (PyTorch): NLP, tabular, embeddings',
      'Feature engineering, pipelines, reproducibility',
    ],
  },
  {
    name: 'Systems & data',
    items: [
      'Training and inference pipelines',
      'Data validation, label quality, leakage checks',
      'Model cards, documentation, versioning',
    ],
  },
  {
    name: 'Communication & rigor',
    items: [
      'Stakeholder tradeoff communication',
      'Interpretability and failure-mode analysis',
      'Reading and applying research; writing technical docs',
    ],
  },
];
---

<section id="skills" class="px-6 py-20 md:px-12 lg:px-24 border-t border-[var(--ink)]/10">
  <div class="max-w-3xl mx-auto">
    <p class="text-sm font-mono text-[var(--accent)] uppercase tracking-wider mb-2">Capabilities</p>
    <h2 class="text-2xl md:text-3xl font-semibold text-[var(--ink)] mb-4">Skills — by Layer</h2>
    <p class="text-[var(--ink)]/80 mb-10">Structured by level of abstraction; no logo walls.</p>

    <div class="grid gap-8 md:grid-cols-1">
      {layers.map((layer, i) => (
        <div class="rounded-lg border border-[var(--ink)]/15 p-5 bg-[var(--surface)]">
          <h3 class="text-sm font-mono text-[var(--accent)] mb-3">{String(i + 1).padStart(2, '0')}. {layer.name}</h3>
          <ul class="list-none space-y-1.5 text-sm text-[var(--ink)]/90">
            {layer.items.map((item) => (
              <li class="pl-0">• {item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
