---
import '../styles/global.css';
import CognitiveLoader from '../components/CognitiveLoader.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
}
const { title, description = 'Bertin â€” ML Engineer & Data Scientist' } = Astro.props;

// "Bertin" as letters for staggered fade-in animation
const brandName = 'Bertin';

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects/', label: 'Projects' },
  { href: '/resume/', label: 'Resume' },
  { href: '/contact/', label: 'Build with me' },
];
---
<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0f0f0f" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#FAFAFA" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen antialiased bg-[var(--surface)] text-[var(--ink)] transition-colors duration-300">
    <CognitiveLoader />
    <header class="fixed top-0 left-0 right-0 z-50 flex flex-wrap items-center justify-between gap-2 px-4 py-3 md:px-8 md:grid md:grid-cols-[1fr_auto_1fr] md:gap-4 bg-[var(--surface)]/90 backdrop-blur-sm border-b border-[var(--ink)]/5 transition-colors duration-300 pl-[max(1rem,env(safe-area-inset-left))] pr-[max(1rem,env(safe-area-inset-right))] pt-[max(0.75rem,env(safe-area-inset-top))]">
      <a href="/" class="flex items-center gap-2 md:gap-3 group focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)] rounded-lg touch-target min-h-[44px] md:min-h-0">
        <div class="profile-avatar w-9 h-9 rounded-full overflow-hidden ring-2 ring-[var(--accent)]/30 group-hover:ring-[var(--accent)] transition-all flex-shrink-0 relative">
          <div class="avatar-fallback absolute inset-0 z-0 bg-gradient-to-br from-[var(--accent)] to-[#1E90FF] flex items-center justify-center text-white text-xs font-semibold">IB</div>
          <img src="/profile.png" alt="Profile" class="absolute inset-0 z-10 w-full h-full object-cover object-center" />
        </div>
        <span class="font-semibold text-[var(--ink)] hidden sm:inline bertin-name" aria-hidden="true">
          {brandName.split('').map((char, i) => (
            <span class="bertin-char inline-block" style={`animation-delay: ${i * 60}ms`}>{char}</span>
          ))}
        </span>
      </a>

      <nav class="flex items-center gap-1 md:justify-self-center order-last md:order-none w-full md:w-auto justify-center flex-wrap justify-center md:flex-nowrap" aria-label="Main navigation">
        {navLinks.map((link) => {
          const isActive = link.href === '/' ? currentPath === '/' : currentPath.startsWith(link.href);
          const isBuildWithMe = link.label === 'Build with me';
          const baseClass = 'px-3 py-2.5 min-h-[44px] md:min-h-0 flex items-center justify-center text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--surface)]';
          const buildWithMeClass = isBuildWithMe ? 'cta-build-with-me border border-[var(--accent)]/50 text-[var(--accent)] hover:bg-[var(--accent-muted)]' + (isActive ? ' bg-[var(--accent-muted)]' : '') : '';
          const defaultClass = !isBuildWithMe ? (isActive ? 'text-[var(--accent)] bg-[var(--accent-muted)]' : 'text-[var(--ink)]/80 hover:text-[var(--accent)] hover:bg-[var(--accent-muted)]') : '';
          return (
            <a
              href={link.href}
              class={`${baseClass} ${buildWithMeClass} ${defaultClass}`}
            >
              {link.label}
            </a>
          );
        })}
      </nav>

      <div class="flex items-center md:justify-self-end touch-target">
        <ThemeToggle />
      </div>
    </header>

    <main class="pt-16 min-h-screen pl-[env(safe-area-inset-left,0)] pr-[env(safe-area-inset-right,0)] pb-[env(safe-area-inset-bottom,0)]">
      <slot />
    </main>
    <script is:inline>
      document.querySelectorAll('.profile-avatar img').forEach(function(img) {
        img.addEventListener('error', function() { img.style.display = 'none'; });
        if (img.complete && img.naturalWidth === 0) img.style.display = 'none';
      });
    </script>
  </body>
</html>
