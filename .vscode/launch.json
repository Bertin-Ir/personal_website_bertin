{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Astro dev + open browser",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["astro", "dev"],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
