{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev: Astro dev server",
      "type": "shell",
      "command": "npx astro dev",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "build: Astro static build",
      "type": "shell",
      "command": "npx astro build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "preview: Astro preview (after build)",
      "type": "shell",
      "command": "npx astro preview",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
